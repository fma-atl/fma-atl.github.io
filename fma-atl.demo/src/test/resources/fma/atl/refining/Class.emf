@namespace(uri="fma.refining.Class.org", prefix="Class")
package Class;

abstract class NamedElement {
  attr String name;
}

abstract class Classifier extends NamedElement {
}

class DataType extends Type {
}

class Class extends Type {
  val Attribute[*]#owner ~attr;
  val Operation[*]#owner ~op;
}

class Attribute extends NamedElement {
  attr boolean isPrivate;
  ref Type[1] type;
  ref Class#~attr owner;
}

class Operation extends NamedElement {
  attr boolean isPrivate;
  ref Type[1] returnType;
  ref Class#~op owner;
}

class Package extends Classifier {
  val Classifier[*] classifiers;
}

class Type extends Classifier {
}

